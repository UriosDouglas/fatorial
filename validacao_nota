while True:
    valor1 = float(input("Digite o primeiro valor entre 0 e 10: "))
    try:
        if valor1 < 0 or valor1 > 10:
            raise ValueError("Valor inválido! O valor deve estar entre 0 e 10.")
        break # se chegou aqui, o valor1 é válido, então sai do loop
    except ValueError:
        print("Valor inválido! O valor deve estar entre 0 e 10.")

while True:
    valor2 = float(input("Digite o segundo valor entre 0 e 10: "))
    try:
        if valor2 < 0 or valor2 > 10:
            raise ValueError("Valor inválido! O valor deve estar entre 0 e 10.")
        break # se chegou aqui, o valor2 é válido, então sai do loop
    except ValueError:
        print("Valor inválido! O valor deve estar entre 0 e 10.")

media = (valor1 + valor2) / 2
print(f"MEDIA ={media}")
